nav.navbar.navbar-bright
  .container
    .navbar-header
      a.navbar-brand(href="/") #{App.getSiteName()}
    div#navbar
      ul.nav.navbar-nav.navbar-right
        if App.getSubscriptionLink() != null && !App.getSubscriptionLink().isEmpty()
          li: a(href="#{App.getSubscriptionLink()}" target="_blank")
            span(style="color: #a94442") Subscribe
        li: a(href="/posts/archive") Blog
        li: a(href="/tags") Tags
        li: a(href="/posts/projects") Projects
        li: a(href="/about") About
        if userService.currentUser() != null && userService.currentUser().isAdmin()
          li: a(href="/admin") Admin
